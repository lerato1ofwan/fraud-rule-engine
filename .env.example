# =============================================================================
# Fraud Rule Engine – Environment Variables
# =============================================================================
# Copy this file to .env and update the values as needed:
#   cp .env.example .env
#
# You may use the defaults for local development.
# For any shared or production environment, use strong, unique secrets.
# The real .env file is gitignored and must never be committed.
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
# Single Postgres instance; each service uses its own database.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Logical databases per service (created by EF Core migrations).
POSTGRES_DB_TRANSACTIONS=transactions_db
POSTGRES_DB_FRAUD_RULE_ENGINE=fraud_rule_engine_db
POSTGRES_DB_REPORTING=reporting_db

# -----------------------------------------------------------------------------
# Kafka
# -----------------------------------------------------------------------------
KAFKA_BROKER_ID=1
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=29092
KAFKA_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=false
KAFKA_TOPIC_PARTITIONS=1

# Topics
KAFKA_TOPIC_TRANSACTION_RECEIVED=transaction.received
KAFKA_TOPIC_FRAUD_ASSESSED=fraud.assessed

# Consumer group IDs
KAFKA_EVALUATIONS_GROUP_ID=fraud-evaluations-worker
KAFKA_REPORTING_GROUP_ID=fraud-reporting-worker

# Zookeeper (for local Kafka)
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka UI
KAFKA_UI_PORT=8080
KAFKA_CLUSTER_NAME=local

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
ASPNETCORE_ENVIRONMENT=Development

# API ports
TRANSACTIONS_API_PORT=5000
REPORTING_API_PORT=5001

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_grafana_password_here
GRAFANA_ALLOW_SIGN_UP=false
GRAFANA_ROOT_URL=http://localhost:3000