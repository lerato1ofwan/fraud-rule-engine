{
  "dashboard": {
    "title": "Fraud Rule Engine Dashboard",
    "tags": ["fraud", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Transactions Received",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(fraud_transactions_received_total[5m])",
            "legendFormat": "Transactions/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Flagged Transactions",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(fraud_transactions_flagged_total[5m]))",
            "legendFormat": "Flagged/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Fraud Checks by Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(fraud_checks_total[5m])) by (is_flagged)",
            "legendFormat": "{{is_flagged}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Risk Score Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(fraud_risk_score_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(fraud_risk_score_bucket[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Rule Trigger Count",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(fraud_rule_triggers_total[5m])) by (rule_name)",
            "legendFormat": "{{rule_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Evaluation Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(fraud_evaluation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}

