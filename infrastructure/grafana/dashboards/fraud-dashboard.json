    {
      "id": 19,
      "title": "Top Triggered Rules (Today)",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 44},
      "targets": [
        {
          "expr": "topk(10, sum(increase(fraud_rule_triggers_count_total[24h])) by (rule_name))",
          "format": "table",
          "instant": true,
          "legendFormat": "{{rule_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
